<mvc:View
	controllerName="painel.ui5.controller.TreeBasic"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
	xmlns="sap.m"	
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<App id="app">
  <Page 
    showNavButton="true" 
    navButtonPress="onNavBack"
    title="Voltar"
  > 
    <Image src="./assets/headerTreeBasic.png" width="100%" height="auto" />

     <Tree
    id="Tree"
    items="{path: '/'}">
      <StandardTreeItem title="{text}"/>

    </Tree>

    <footer>
      <core:Fragment fragmentName="painel.ui5.view.Footer" type="XML" />          
    </footer>
  </Page>
    
</App>

</mvc:View>